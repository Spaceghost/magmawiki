<% form_for article do |f| %>
	<div class="new-wrapper">
	    <div>
		    <%= f.label :title %>
		    <%= f.text_field :title %>
	    </div>
	    <div>
	    <% fields_for article.current_revision do |f| %>
		    <div class="new-wrapper-body">
			<%= f.text_area :body %>
		    </div>
	    <% end %>
	    </div>
		    <%= f.submit "submit" %>
	</div>
<% end %>